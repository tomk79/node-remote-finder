<div class="px2-p">
	<p class="remote-finder__property-view-current-dir">{{ currentDir }}</p>
	<p class="remote-finder__property-view-item-name">{{ itemName }}</p>
</div>

<div class="px2-p">
	<ul class="px2-vertical-list">
		<li><button
			class="px2-btn px2-btn--primary px2-btn--block remote-finder__property-view-btn-open"
			data-current-dir="{{ currentDir }}"
			data-filename="{{ itemName }}"
			>{{ lb.get('ui_label.open') }}</button></li>
	</ul>
</div>

{% if itemName != '../' and itemName != './' %}
<div class="px2-p">
	<ul class="px2-vertical-list">
		<li><button
			class="px2-btn px2-btn--block remote-finder__ico-copy remote-finder__property-view-btn-copy"
			data-current-dir="{{ currentDir }}"
			data-filename="{{ itemName }}"
			>{{ lb.get('ui_label.duplicate') }}</button></li>
		<li><button
			class="px2-btn px2-btn--block remote-finder__ico-rename remote-finder__property-view-btn-rename"
			data-current-dir="{{ currentDir }}"
			data-filename="{{ itemName }}"
			{% if not itemInfo.writable %}disabled{% endif %}
			>{{ lb.get('ui_label.rename') }}</button></li>
	</ul>
</div>

<div class="remote-finder__property-view-main">
</div>

<div class="px2-p">
	<ul class="px2-vertical-list">
		<li><button
			class="px2-btn px2-btn--block px2-btn--danger remote-finder__ico-delete remote-finder__property-view-btn-delete"
			data-current-dir="{{ currentDir }}"
			data-filename="{{ itemName }}"
			{% if not itemInfo.writable %}disabled{% endif %}
			>{{ lb.get('ui_label.delete') }}</button></li>
	</ul>
</div>
{% endif %}
